<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ARActivity">

    <!-- AR View takes up the whole screen - using GLSurfaceView -->
    <android.opengl.GLSurfaceView
        android:id="@+id/ar_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Include the navigation overlay layout -->
    <include
        android:id="@+id/navigation_overlay"
        layout="@layout/navigation_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout> 